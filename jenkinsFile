node {
        def app
        stage('Clone repository') {
                checkout scm
        }
        stage('Build image') {
                app = docker.build("woddu34/test")
        }
        stage('Test image') {
                app.inside {
                        sh 'npm run build'
                }
        }
        stage('Push image') {
                docker.withRegistry('https://registry.hub.docker.com', 'github') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                }
        }
}
